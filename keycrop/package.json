{
  "name": "keycrop",
  "displayName": "keycrop",
  "description": "A virtual greenhouse game for learning VSCode hotkeys",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "keycrop.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "generator",
          "name": "keycrop generator",
          "contextualTitle": "Use hotkeys to grow your crop!",
          "type": "webview"
        },
        {
          "id": "greenhouse",
          "name": "keycrop greenhouse",
          "contextualTitle": "Use hotkeys to grow your crop!",
          "type": "webview"
        },
        {
          "id": "inventory",
          "name": "keycrop inventory",
          "contextualTitle": "Use hotkeys to grow your crop!",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "keycrop",
      "properties": {
        "keycrop.background": {
          "type": "string",
          "default": "dirt",
          "enum": [
            "dirt", 
            "inventory"
          ],
          "description": "The view background"
        }
      },
      "keycrop.scale": {
        "type": "string",
        "default": "Medium",
        "enum": [
          "Small",
          "Medium",
          "Big"
        ],
        "description": "The scale of the plants."
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "global": "^4.4.0"
  }
}
